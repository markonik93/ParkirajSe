<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.singidunum.ac.parkirajse">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Parkirajte se"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParkirajSe">
        <activity android:name=".VehicleAdd"></activity>
        <activity android:name=".Data" />
        <activity android:name=".Register" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- <intent-filter> smo prebacili iz .MainActivity u .Login kako bi Login bio prvi pri pokretanju aplikacije -->
        <activity android:name=".MainActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>